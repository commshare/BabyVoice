<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.lihb.babyvoice.customview.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_top"
        android:background="@color/colorPrimary"
        app:titleTextColor="@android:color/white"
        app:titleText="@string/tab_baby_watch" />

   <!-- <com.lihb.babyvoice.customview.AnalysisBarChartingView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />-->

    <Button
        android:id="@+id/testplay_start_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="开始" />

    <Button
        android:id="@+id/testplay_pause_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="暂停" />

    <Button
        android:id="@+id/testplay_stop_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="结束" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/recording_background"
    android:orientation="vertical">

    <com.lihb.babyvoice.customview.TitleBar
        android:id="@+id/title_bar"
        app:leftDrawable="@mipmap/ic_back_orange"
        app:leftText="@string/voice_recording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/padding_top" />
    <!-- <com.lihb.babyvoice.customview.AnimatedRecordingView
         android:id="@+id/animated_recording_view"
         android:layout_width="match_parent"
         android:layout_height="200dp" />-->
    <com.lihb.babyvoice.customview.RecordingView
        android:id="@+id/animated_recording_view"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <Chronometer
        android:id="@+id/chronometer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:format="00:00:00"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/record_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@color/tab_txt_selected"
        android:gravity="center"
        android:textSize="32dp"
        android:text="开始" />

</LinearLayout>